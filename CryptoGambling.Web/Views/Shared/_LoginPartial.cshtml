@using Microsoft.AspNetCore.Identity
@using CryptoGambling.Web.Areas.Identity.Data

@inject SignInManager<UserIdentity> SignInManager
@inject UserManager<UserIdentity> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>



}
else
{

    <div class="text-end">
        <a type="button" class="btn btn-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Sign-up</a>
        <a type="button" class="btn btn-outline-light me-2"  asp-area="Identity" id="login" asp-page="/Account/Login" >Login</a>
    </div>
}
